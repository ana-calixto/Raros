<div class="container d-flex">
  <div class="banner">
    <img src="<%= image_path ('banner.jpg') %>" alt="" style="width: 90vw; height: 35vw">
    <span id="banner-typed-text"></span>
  </div>
  <div class="container-login">
    <div class="form-sigin">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="user-email">
          <%= f.input :email, label: 'E-mail', placeholder: 'E-mail',
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="user-password">
          <%= f.input :password, label: 'Senha', placeholder: 'Senha',
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="remenber-me">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <div class="sign-up-links">
        <%= render "devise/shared/links" %>
      </div>
      </div>
    </div>
  </div>
</div>
