<div class="container">
  <h2>Editar Usu√°rio</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :photo,
                          input_html: { class: 'hidden', id: 'photo-input'},
                          label_html: { class: 'upload-photo'},
                          label: 'üì∑ Sua foto' %>
      <%= f.input :first_name,
                          label: 'Nome',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "first_name" },
                          placeholder: 'Nome' %>
      <%= f.input :last_name,
                          label: 'Sobrenome',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "last_name" },
                          placeholder: 'Sobrenome'%>
      <%= f.input :address,
                          label: 'Endere√ßo',
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "address" },
                          placeholder: 'Endere√ßo'%>
      <%= f.input :description,
                          label: 'Minha hist√≥ria',
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "description" },
                          placeholder: 'Minha hist√≥ria'%>
      <%= f.input :username,
                          required: false,
                          input_html: { autocomplete: "username" }%>
      <%= f.input :password,
                          hint: "deixe em branco se n√£o quiser alterar a senha",
                          required: false,
                          input_html: { autocomplete: "Nova Senha" } %>
      <%= f.input :password_confirmation,
                          required: false,
                          input_html: { autocomplete: "Nova Senha" } %>
      <%= f.input :current_password,
                          hint: "Preencha sua senha para confirmar as altera√ß√µes",
                          required: true,
                          input_html: { autocomplete: "Senha Atual" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enviar" %>
    </div>
  <% end %>

  <p><%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja cancelar?" }, method: :delete %></p>

  <%= link_to "Voltar", :back %>
</div>
