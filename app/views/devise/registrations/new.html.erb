<div class="container mt-3">

  <div class="join">
    <h2>Cadastre-se</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="personal-data">
        <div class="picture">
          <div class="pic">
            <%= image_tag "", width: 150, class: "hidden", id: "photo-preview" %>
          </div>
          <div class="upload-pic">
            <%= f.input :photo,
                      input_html: { class: 'hidden', id: 'photo-input'},
                      label_html: { class: 'upload-photo'},
                      label: 'ğŸ“· Sua foto' %>
          </div>
        </div>
        <div class="full-name">
          <div class="first-name">
            <%= f.input :first_name,
                        label: 'Nome',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name" }%>
          </div>
          <div class="last-name">
            <%= f.input :last_name,
                        label: 'Sobrenome',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name" }%>
          </div>
        </div>
      </div>
      <div class="description">
        <%= f.input :description,
                    label: 'Minha histÃ³ria',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "description" }%>
      </div>
      <div class="address">
        <%= f.input :address,
                    label: 'EndereÃ§o',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "address" }%>
      </div>
      <div class="birthday">
        <%= f.input :birth_date,
                    label: 'Data de Nascimento',
                    start_year: Date.today.year - 110,
                    end_year: Date.today.year,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "birth_date" }%>
      </div>
      <div class="username">
        <%= f.input :username,
                    label: 'UsuÃ¡rio',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "username" }%>
      </div>
      <div class="login-data">
        <div class="email">
          <%= f.input :email,
                      label: 'E-mail',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
        </div>
        <div class="pass">
          <%= f.input :password,
                      label: 'Senha',
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="pass-confirm">
          <%= f.input :password_confirmation,
                      label: 'Confirme sua senha',
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastrar", class: "btn" %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
