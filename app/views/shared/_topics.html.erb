  <div class="topics" >

    <div><h1>Atividade</h1></div>

      <% topics.each do |t| %>
        <div class="card">
          <%= cl_image_tag t.user.photo.key, class: "avatar" %>
          <p>Criado por <strong> <%= t.user.first_name %></strong> </p>
          <p> Publicado em <%= t.created_at.strftime("%d-%m-%Y") %>: <%= link_to t.title, topic_path(t) %> </p>
           <% t.content.split(/\s*?\r\s*/).map do |paragraph| %>
           <p> <%= paragraph.scan(/[[:alnum:]]+/).uniq.join(' ')  %>... </p>
           <% end %>
        </div>
      <% end %>
