<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<div class="logo">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'trevo_01.png', width: '30px', height: '30px', color: 'pink' %>
  <% end %>
  <h1 class="mt-3" >Raros</h1>
</div>

  <div class="d-flex align-items-center mr-5" >
  <%= form_tag search_path, method: :get, class: "search" do %>
    <%= text_field_tag :query,
      params[:query],
      placeholder: "Buscar"
    %>

    <%= button_tag :submit, class: "btn-style" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <li class="nav-item dropdown">
          <%= image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, width: '100%', height: '40px' %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Editar", edit_user_registration_path, class: "dropdown-item" %>
            <%#= link_to "Action", "#", class: "dropdown-item" %>
            <%#= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
