<div class="container p-3">

  <div class="border-bottom">
    <h3>Chats: <i class="fas fa-smile-wink"></i></h3>
  </div>

  <div class="container">
    <div class="row">
    <span>Minhas Mensagens</span>
      <% my_chatrooms.each do |chatroom| %>
        <ul class="list-group">
          <li class="list-group-item ">
            <i class="fas fa-comment-dots" ></i>
            <%= link_to "Chat com #{chatroom.user.first_name}", chatroom_path(chatroom) %>
          </li>
        </ul>
      <% end %>
      <span>Mensagens Recebidas</span>
      <% chatrooms.each do |chatroom| %>
        <ul class="list-group">
          <li class="list-group-item ">
            <i class="fas fa-comment-dots" ></i>
            <%= link_to "Chat com #{chatroom.user.first_name}", chatroom_path(chatroom) %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>

</div>
