<div class="container-home">
  <div class="profile-informations">
    <div class="user-photo">
      <%= link_to page_path(current_user) do %>
        <%= image_tag current_user.photo, width: '100%', height: "250px", id: 'picture' %>
      <% end  %>
    </div>
    <div class="user-name">
      <%= current_user.first_name %> <%= current_user.last_name %>
    </div>
    <div class="informations">
      <%= current_user.description %>
      <%= current_user.birth_date  %>
    </div>
    <div id="map"
      style="width: 100%; height: 20vw;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
   </div>

  <div class="feed-news">
    <div class="new-topic">
      <%= link_to 'Novo Topico', new_topic_path %>
    </div>
    <h5>Feed de noticias aqui</h5>
  </div>

  <div class="more">
    <h5>Quem eu sigo</h5>
    <%= render 'shared/followings', followings: current_user.following %>
    <h5>Quem me segue</h5>
    <%#= render 'shared/followings', followings: current_user.follower %>
    <h5>Chat aqui</h5>
      <div> 
       <%= render "shared/chatrooms", my_chatrooms: @my_chatrooms, chatrooms: @chatrooms %>
      </div>
  </div>
</div>
