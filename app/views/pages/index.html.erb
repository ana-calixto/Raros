<div class="container-home">
  <div class="profile-informations">
    <div class="user-photo">
      <%= link_to page_path(current_user) do %>
        <%= image_tag current_user.photo, width: '100%', height: "250px", id: 'picture' %>
      <% end %>
    </div>
    <div class="user-name">
      <%= current_user.first_name %> <%= current_user.last_name %>
    </div>
    <div class="informations">
      <div class="name">
        <%= current_user.description %>
      </div>
      <div class="idade">
        <%= current_user.birth_date %>
      </div>
      <div class="disease-name">
        <%= current_user.disease.name %>
      </div>
    </div>
    <div id="map"
      style="width: 100%; height: 20vw;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
   </div>

  <div class="feed-news">
    <div class="new-topic-navbar">
      <div class="home-icone">
        <%= link_to root_path do %>
          <%= image_tag 'home.svg', width: '40px' %>
        <% end  %>
      </div>
      <div class="post-it">
        <%= link_to new_topic_path do %>
          <%= image_tag 'post.png', width: '40px' %>
        <% end  %>
      </div>
      <div class="chat">
        <%= link_to new_topic_path do %>
          <%= image_tag 'chat.png', width: '40px' %>
        <% end  %>
      </div>
    </div>
  </div>

  <div class="more">
    <div class="followings-home">
      <div class="followings-home">
        <%= render 'shared/followings', followings: current_user.following %>
      </div>
      <div class="followers-home">
        <%= render 'shared/followers', followers: current_user.followers %>
      </div>
    </div>
    <h5>Chat aqui</h5>
      <div>
       <%= render "shared/chatrooms", chatrooms: current_user.chatrooms %>
      </div>
  </div>
</div>
