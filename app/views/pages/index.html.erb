<div class="container">
  <div class="container-home">
    <div class="profile-informations">
      <div class="user-photo" >
      <% if current_user%>
        <%= link_to page_path(current_user) do %>
          <%= image_tag current_user.photo, width: '100%', height: "250px", id: 'picture', style: 'border-radius: 5px;' %>
        <% end %>
       <% end %>
      </div>
      <div class="user-name">
        <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %>
      </div>
      <div class="informations">
        <div class="idade">
          <i class="fas fa-birthday-cake"></i>
          <%= @age if current_user %>
        </div>
        <div class="disease-name">
          <i class="far fa-gem"></i>
          <%= current_user.disease.name.capitalize %>
        </div>
      </div>
      <div class="map-home">
      <i class="fas fa-map-marker-alt"></i>
        <div id="map"
          style="width: 100%; height: 20vw; border-radius: 5px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
     </div>
    <div class="feed-news">
      <div class="new-topic-navbar">
        <div class="home-icone">
          <%= link_to root_path do %>
            <%= image_tag 'home.svg', width: '25px' %>
          <% end  %>
        </div>
        <div class="post-it">
          <%= link_to new_topic_path do %>
            <%= image_tag 'post.png', width: '25px' %>
          <% end  %>
        </div>
        <div class="chat">
          <%= link_to new_topic_path do %>
            <%= image_tag 'chat.png', width: '25px' %>
          <% end  %>
        </div>
      </div>
        <div>
          <%#= render "shared/search", users: @users %>
          <%= render "shared/topics", topics: Topic.all %>
       </div>
    </div>
    <div class="more">
      <div class="followings-home">
        <div class="followings-home">
          <%= render 'shared/followings', followings: current_user.following %>
        </div>
        <div class="followers-home">
          <%= render 'shared/followers', followers: current_user.followers %>
        </div>
      </div>
        <div>
         <%= render "shared/chatrooms", my_chatrooms: @my_chatrooms, chatrooms: @chatrooms %>
        </div>
    </div>
  </div>
</div>
