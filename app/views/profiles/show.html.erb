<div class="container">

  <div class="header">
    <div class="profile-pic">
      <%= cl_image_tag @user.photo.key, transformation: [
      {width: 400, height: 400, gravity: "face", radius: "max", crop: "crop"},
      {width: 200, crop: "scale"}
      ] if @user.photo.attached? %>
    </div>
    <div class="display-name" style = "border: solid;">
      <%= @user.username %>
    </div>
    <div class="btn-follow" style = "border: solid;">
      <%= link_to "Follow", follow_path(@user.id), method: :post, remote: true %>
    </div>
  </div>

  <div class="content">
  
    <div class="info">
      <h3>Info</h3>
      <h6>Location</h6>
      <h6>Age</h6>
      <h6>Raridade</h6>
      <h6>Send a message</h6>
      <%= link_to "Editar", edit_user_registration_path if @user=current_user %>
    </div>

    <div class="posts">
      <div class="post-create">
      <%= link_to "Criar um tÃ³pico", topics_path %>
      </div>

      <div class="post-list">
        <h3>Atividade</h3>
        <%#= user.topics %>
      </div>
    </div>

    <div class="follow">
      <h3>Followers</h3>
      <h3>Following</h3>
    </div>

  </div>

</div>